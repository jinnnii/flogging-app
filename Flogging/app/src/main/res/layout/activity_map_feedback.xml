<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    tools:context=".map.MapFeedbackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/feedback_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/gmarketsansttfbold"
            android:textSize="30sp"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/darker_green"
            android:text="여러분의\n피드백이\n필요합니다." />

        <TextView
            android:id="@+id/feedbacksub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/scdream5"
            android:textColor="@color/text_gray"
            android:textSize="17sp"
            android:text="쓰레기의 양이 많은 편이었나요?" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autofillHints="선택해주세요"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_shape_input_x_box"
            android:ems="20"
            android:fontFamily="@font/scdream5"
            android:hint="추가 의견을 남겨주세요"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:textColor="@color/text_gray"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:background="@drawable/ic_shape_main_button"
        android:backgroundTint="@color/main_green"
        android:fontFamily="@font/scdream5"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="완료" />

</RelativeLayout>